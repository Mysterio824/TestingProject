		{
			"name": "Sign-In",
			"item": [
				{
					"name": "Sign-In",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Reads expectations from the ER column, e.g. \"Status:200\" or \"email:...|password:...\"\r",
									"const id = pm.iterationData.get('TestCaseID');\r",
									"const title = pm.iterationData.get('Title') || '';\r",
									"const er = (pm.iterationData.get('ER') || '').trim();\r",
									"\r",
									"const parts = er ? er.split('|').map(s => s.trim()).filter(Boolean) : [];\r",
									"const jsonText = pm.response.text();\r",
									"let json;\r",
									"try { json = pm.response.json(); } catch (e) { json = null; }\r",
									"\r",
									"let expectedStatus = null;\r",
									"const fieldExpectations = [];\r",
									"\r",
									"parts.forEach(p => {\r",
									"  const m = p.match(/^(\\w+)\\s*:\\s*(.+)$/);\r",
									"  if (!m) return;\r",
									"  const key = m[1].toLowerCase();\r",
									"  const value = m[2];\r",
									"\r",
									"  if (key === 'status') {\r",
									"    const code = parseInt(value, 10);\r",
									"    if (!Number.isNaN(code)) expectedStatus = code;\r",
									"  } else if (key === 'email' || key === 'password') {\r",
									"    fieldExpectations.push({ field: key, expected: value });\r",
									"  }\r",
									"});\r",
									"\r",
									"// Status code check (when ER includes Status:xxx)\r",
									"if (expectedStatus !== null) {\r",
									"  pm.test(`[${id}] ${title} - status is ${expectedStatus}`, function () {\r",
									"    pm.response.to.have.status(expectedStatus);\r",
									"  });\r",
									"}\r",
									"\r",
									"// Field message checks (when ER includes email:... and/or password:...)\r",
									"fieldExpectations.forEach(({ field, expected }) => {\r",
									"  pm.test(`[${id}] ${title} - ${field} message contains expected`, function () {\r",
									"    let found = false;\r",
									"\r",
									"    if (json && typeof json === 'object') {\r",
									"      const candidates = [];\r",
									"\r",
									"      // Common API shapes\r",
									"      if (json.errors && json.errors[field] !== undefined) candidates.push(json.errors[field]);\r",
									"      if (json[field] !== undefined) candidates.push(json[field]);\r",
									"      if (json.message && typeof json.message === 'object' && json.message[field] !== undefined) {\r",
									"        candidates.push(json.message[field]);\r",
									"      }\r",
									"\r",
									"      const messages = candidates.flatMap(v => Array.isArray(v) ? v : [v]).map(String);\r",
									"      found = messages.some(msg => msg.includes(expected));\r",
									"    }\r",
									"\r",
									"    // Fallback: raw response text contains expected\r",
									"    if (!found) found = jsonText.includes(expected);\r",
									"\r",
									"    pm.expect(found, `Expected to find \"${expected}\" for ${field}`).to.be.true;\r",
									"  });\r",
									"});"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{ \"email\": \"{{Email}}\", \"password\": \"{{Password}}\" }",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{BASE_API_URL}}/users/login",
							"host": [
